<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_difficulty_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ateam.floppycopter.DifficultySelect">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/radioDiff"
        android:layout_alignEnd="@+id/radioDiff"
        android:id="@+id/textView" />

    <RadioGroup
        android:id="@+id/radioDiff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <RadioButton
            android:id="@+id/radioEasy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Easy"
            android:checked="true"
            />
        <RadioButton
            android:id="@+id/radioMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium"
            />
        <RadioButton
            android:id="@+id/radioHard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hard"
            />
    </RadioGroup>

    <TextView
        android:text="Select your desired difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/radioDiff"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="87dp"
        android:id="@+id/textView2" />

</RelativeLayout>
